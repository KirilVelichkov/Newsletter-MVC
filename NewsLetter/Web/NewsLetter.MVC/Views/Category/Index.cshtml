@model ArticleAndCategoryViewModel

<div class="sitemap">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="home?pageNumber=1&pageSize=5">Home</a></li>
        <li class="breadcrumb-item">@Model.CategoryName</li>
    </ol>
</div>
<div class="row articles-containter">

    @foreach (var article in Model.ArticlesByCategory)
    {
        <div class="col- articles-single-article">
            <a href="/article/index/@article.Id">
                <div class="single-article-image-containter">
                    <div class="single-article-category">
                        @article.Category.ToUpper()
                    </div>
                    <img class="single-article-image" src="@article.ImageUrl" />
                    <div class="single-article-date">
                        <span>@article.CreatedOn.ToString("MMM").Substring(0, 3).ToUpper()</span>
                        <span>@article.CreatedOn.Day</span>
                    </div>
                </div>

                <div class="single-article-title" title="@article.Title">
                    @article.Title
                </div>

                <div class="single-article-author">
                    AUTHOR ADMIN
                </div>

                <div class="single-article-content">
                    @article.Content
                </div>

                <img class="bottom-line" src="/Images/Static/bottom-line.jpg">
            </a>
        </div>
    }
</div>

<div class="row pagination-container no-gutters">
    <div class="d-flex justify-content-start" id="previous">
        <a href="/category/?category=@Model.CategoryName&pageNumber=1&pageSize=@Model.pageSize">«</a>
    </div>

    <div class="col d-flex justify-content-center pages">
        @for (int i = 1; i <= Model.ArticlesCount; i++)
        {
            <a href="/category/?category=@Model.CategoryName&pageNumber=@i&pageSize=@Model.pageSize">@i</a>
        }
    </div>

    <div class="d-flex justify-content-end" id="next">
        <a href="/category/?category=@Model.CategoryName&pageNumber=@Model.ArticlesCount&pageSize=@Model.pageSize">»</a>
    </div>
</div>