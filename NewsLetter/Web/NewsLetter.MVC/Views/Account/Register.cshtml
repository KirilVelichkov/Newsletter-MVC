@model RegisterViewModel

<button type="button" id="register-modal" class="btn btn-primary hidden" data-toggle="modal" data-target="#registerModal"></button>

<div class="modal fade custom-login-modal" data-backdrop="static" data-keyboard="false" id="registerModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="custom-modal-header">REGISTER</h3>
                <button id="modal-close-button" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
           @using (Html.BeginForm(nameof(AccountController.Register), "Account", FormMethod.Post, new { enctype = "multipart/form-data", id = "register-form", @class = "custom-form" }))
           {
               @Html.AntiForgeryToken();

                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Username)
                        @Html.TextBoxFor(x=>x.Username, new { @class = "form-control", placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(x=>x.Email, new { @class = "form-control", placeholder = "Email Address" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-error" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.ConfirmPassword)
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "ConfirmPassword" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation-error" })
                    </div>

                </div>
                <div class="modal-footer justify-content-start">
                    <label for="avatar" class="btn btn-custom">AVATAR</label>
                    <input type="file" name="UserAvatar" id="avatar" required>
                    <input type="submit" class="btn btn-success btn-submit-form" value="REGISTER">
                </div>
           }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Scripts/register.js"></script>
}
